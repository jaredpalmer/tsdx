{
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "declarationDir": "typings",
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["src/*", "node_modules/*"]
    },
    "jsx": "react",
    "esModuleInterop": false
  },
  "include": ["src", "types"], // test parsing of trailing comma & comment
}
